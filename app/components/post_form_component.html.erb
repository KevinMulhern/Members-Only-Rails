<div class="bg-white rounded-lg shadow-lg p-6" data-controller="new-post">

  <div class="flex justify-between items-center w-11/12 mx-auto">
    <div class="flex items-center">
      <img src=<%="https://picsum.photos/id/#{current_user.id}/500"%> alt="profile picture" class="w-12 rounded-full">
      <h3 class="font-medium text-gray-900 pl-4"><%= current_user.name.capitalize %><h3>
    </div>
    <button class="bg-green-500 text-white font-semibold py-2 px-3 h-10 rounded-md" data-action="click->new-post#toggle" data-new-post-target="newButton">New</button>
  </div>

  <div class="hidden mt-4" data-new-post-target="form">
    <%= form_with model: post, class: "grid grid-cols-1 gap-4 w-11/12 mx-auto", remote: false do |post_form| %>
      <div class="block">
        <%= post_form.text_field :title, placeholder: "title...", class: "bg-gray-200 w-full ring-0 rounded-md py-2.5 px-2.5 focus:outline-none" %>
      </div>

      <div class="block">
        <%= post_form.text_area :content, placeholder: "Whats on your mind?...", class: "bg-gray-200 w-full rounded-md py-2.5 px-2.5 focus:outline-none" %>
      </div>

      <div>
        <%= post_form.submit "Submit", class: "bg-green-500 text-white font-semibold py-2 px-3 rounded-md", data: { action: "click->new-post#toggleForm" } %>
        <button class="bg-red-500 text-white font-semibold py-2 px-3 rounded-md ml-2" data-action="click->new-post#toggle">Cancel</button>
      </div>
    <% end %>
  </div>
</div>

