<div class="container mx-auto">
  <%= form_with model: @post, class: "grid grid-cols-1 gap-6 mt-8 max-w-lg mx-auto" do |post_form| %>
    <div class="block">
      <%= post_form.text_field :title, placeholder: "title...", class: "w-full ring-0 rounded-md py-2.5 px-2.5 focus:outline-none" %>
    </div>
    <div class="block">
      <%= post_form.text_area :content, placeholder: "Whats on your mind?...", class: "w-full rounded-md py-2.5 px-2.5 h-40 focus:outline-none" %>
    </div>

    <div>
      <%= post_form.submit "Create Post", class: "bg-green-500 text-white font-semibold py-3 px-6 rounded-md" %>
    </div>
  <% end %>
</div>
