
<div class="container mx-auto">
  <div class="max-w-2xl mx-auto space-y-5 py-6">
  <%= link_to "New Post", new_post_path, class: "bg-green-500 text-white font-semibold py-3 px-6 rounded-md" %>
    <% current_user.most_recent_posts.each do |post| %>
      <div class="bg-gray-50 rounded overflow-hidden">
        <div class="px-5 py-5">
          <h3 class="text-lg font-semibold pb-5 "><%= post.title.capitalize %></h3>
          <p><%= post.content %></p>
        </div>

        <div class="bg-gray-100 px-5 py-2.5">
          <p><span class="text-gray-500">By:</span> <span><%= post.user.name.capitalize %></span> </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
